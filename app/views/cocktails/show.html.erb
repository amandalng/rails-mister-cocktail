<h1><%= @cocktail.name %></h1>

<div class="container mt-4 mb-4 d-flex justify-content-center align-items-center">
  <%= cl_image_tag @cocktail.photo.key, :transformation=>[
    {:width=>400, :height=>400, :gravity=>"center", :radius=>"max", :crop=>"fill"},
    {:width=>200, :crop=>"fill"}
    ] %>

    <div>
      <ul>
        <% @doses.each do |dose| %>
        <li><%= dose.description %> <%= dose.ingredient.name %> | <%= link_to "Delete", [@cocktail, dose], method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
        </ul>

        <div class="ml-4">
          <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail)  %> |
          <%= link_to "See all cocktails", cocktails_path %>
        </div>
      </div>
    </div>
