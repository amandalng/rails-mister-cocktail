<h1>All Cocktails</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-6">
      <div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, crop: :fill %>')">
        <div>
          <h2><%= link_to cocktail.name, cocktail_path(cocktail)  %></h2>
          <h2><%= link_to cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure?"} do %>
              <i class="far fa-times-circle"></i>
            <% end %>
          </h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
